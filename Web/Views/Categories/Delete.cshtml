@using Web.Models
@model Models.Category

@{
    ViewBag.Title = "Delete Category";
}

@section breadcrumbs
{
    <ul class="breadcrumb">
        <li>@Html.ActionLink("Home", "Index", "Home")</li>
        <li>@Html.ActionLink("Categories", "Index", "Categories")</li>
        <li class="active">Delete</li>
    </ul>
}

<div class="page-header">
    <h2>@ViewBag.Title</h2>
</div>


<div class="row">
    <div class="col-lg-6">
        <div class="well">
            @using (Html.BeginForm("Delete", "Categories", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(x => x.Id)

                <fieldset>

                   <div class="form-group">
                        <div class="editor-label">
                            @Html.BootStrapLabelFor(model => model.Name)
                        </div>

                        <div class="editor-field">
                            @Html.TextBox("Name", Model.Name, new { @readonly="readonly" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>        
                    
                    <div class="form-group">
                        <div class="col-lg-offset-2">
                            <input type="submit" value="Delete Category" class="btn btn-danger" />
                        </div>
                    </div>
                </fieldset>
            }
        </div>
    </div>
</div>

